<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">


    <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginRight="6dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            />

    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                />
        <ImageView android:id="@+id/direction" android:layout_height="wrap_content" android:layout_width="wrap_content"
                   android:src="@drawable/direction"/>
    </LinearLayout>

    <TextView
            android:id="@+id/city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            />

    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                />
        <ImageView android:id="@+id/call" android:layout_height="wrap_content" android:layout_width="wrap_content"
                   android:src="@drawable/call"/>
    </LinearLayout>


</LinearLayout>